// Gene Set Manager Interface

#ifndef GENESETMANAGER_H
#define GENESETMANAGER_H

#include <map>
#include <vector>
#include <iostream>
using namespace std;

struct GeneSet {
    string name;
    vector<int> rankings;
};

class GeneSetManager {
    public:
        GeneSetManager();
        void addRankingToGeneset(int ranking, string geneset);
        void sortByMedian();
        void getAnomalyScore(float gamma, map<string, float> *ES);
    private:
        vector<GeneSet*> genesets;
        map<string, GeneSet*> genesetmap;
};

#endif
